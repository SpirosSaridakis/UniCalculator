@inject NavigationManager NavigationManager

<div class="card m-2 shadow-lg" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Title</h5>
        <p class="card-text">@Description</p>
        <div class="d-flex flex-column justify-content-between">
            @for (int i = 1; i <= Selectors; i++)
            {
                <select class="form-select form-select-lg mb-3" aria-label="Index @i">
                    <option selected disabled>@($"Index {i}")</option>
                    <option>Option 1</option>
                    <option>Option 2</option>
                    <option>Option 3</option>
                </select>
            }
            <button class="btn btn-primary ms-2" style="z-index: 999;" @onclick="TogglePopup">
                <i class="bi bi-question-circle"></i> Info
            </button>
        </div>
    </div>
</div>

@if (isPopupVisible)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">More Info</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="TogglePopup"></button>
                </div>
                <div class="modal-body">
                    <p>This popup contains more details about @Title.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="TogglePopup">Close</button>
                </div>
            </div>
        </div>
    </div>
}


@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public int Selectors { get; set; }

    private bool isPopupVisible;

    private void TogglePopup()
    {
        isPopupVisible = !isPopupVisible;
    }
}


